{
  "$id": "urn:gleam:profile:resource:json-entity:1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Entity Resource",
  "description": "Extends Frictionless data-resource to allow a JSON Schema pointer for non-tabular JSON.",
  "type": "object",
  "allOf": [
    { "$ref": "https://specs.frictionlessdata.io/schemas/data-resource.json" }
  ],
  "properties": {
    "name": { "type": "string" },
    "path": { "type": "string" },
    "mediatype": { "const": "application/json" },
    "jsonSchema": {
      "type": "string",
      "description": "Path or URI to the JSON Schema that validates this JSON resource."
    }
  },
  "required": ["name", "path", "mediatype", "jsonSchema"],
  "additionalProperties": true
}
